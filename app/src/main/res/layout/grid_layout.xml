<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_lv1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/monster_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_lv1" />

    <RelativeLayout
        android:id="@+id/element_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/monster_name">

        <ImageView
            android:id="@+id/element_left"
            android:layout_width="20dp"
            android:layout_height="25dp"
            app:srcCompat="@drawable/dark"

            />

        <ImageView
            android:id="@+id/element_center"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@id/element_left"
            app:srcCompat="@drawable/earth" />

        <ImageView
            android:id="@+id/element_right"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@id/element_center"
            app:srcCompat="@drawable/fire" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>